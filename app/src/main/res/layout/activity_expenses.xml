<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Expenses">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addGroup"
        style="?android:textAppearanceMedium"
        app:layout_constraintBottom_toTopOf="@id/addFriend"
        android:background="@color/white"
        android:textColor="@color/green"
        android:onClick="addAGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_friend"
        android:layout_marginBottom="@dimen/layout_marginBottom_16"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addFriend"
        style="?android:textAppearanceMedium"
        app:layout_constraintBottom_toTopOf="@id/sendMessage"
        android:background="@color/white"
        android:textColor="@color/green"
        android:onClick="addAFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_friend"
        android:layout_marginBottom="@dimen/layout_marginBottom_16"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendMessage"
        style="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"
        android:textColor="@color/green"
        android:onClick="sendMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_message"
        android:layout_marginBottom="@dimen/layout_marginBottom_16"
        android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>

