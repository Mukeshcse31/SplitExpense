<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- RecyclerView -->
    <style name="RecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">@dimen/list_side_margin</item>
        <item name="android:paddingEnd">@dimen/list_side_margin</item>
        <item name="android:paddingBottom">@dimen/list_bottom_margin</item>
        <item name="android:paddingTop">@dimen/list_top_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="memberRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">@dimen/list_side_margin</item>
        <item name="android:paddingEnd">@dimen/list_side_margin</item>
        <item name="android:paddingBottom">@dimen/list_bottom_margin</item>
        <item name="android:paddingTop">@dimen/group_top_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="AppBarLayoutStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/cardview_shadow_start_color</item>
        <item name="android:elevation">@dimen/app_bar_layout_elevation</item>
    </style>

    <!-- CollapsingToolbarLayout -->
    <style name="CollapsingToolbarLayoutStyle" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:colorBackground">@color/common_google_signin_btn_text_dark_disabled</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- app logo in the ArticleListActivity -->
    <style name="appLogoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <!-- toolbar -->
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:elevation">@dimen/detail_toolbar_elevation</item>
    </style>

    <!-- FloatingActionButton in the ArticleDetailActivity -->
    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:stateListAnimator">@animator/fab_state_list_anim</item>
    </style>

</resources>
